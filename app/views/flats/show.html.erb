<div class="nav">
  <h3><%= link_to "Simple Airbnb", flats_path %></h3>
  <h4><%= link_to "Add flat", new_flat_path, class: "btn-top" %></h4>
</div>

<div style="position: relative">
  <% if @flat.id <= 30 %>
    <% img = @flat.id.to_s + ".jpg" %>
    <div style="position: absolute; z-index: 1; background: url(<%= asset_path img %>); background-size: cover; background-position: center; width: 100%; height: 400px;"></div>
  <% else %>
    <div style="position: absolute; z-index: 1; background: url(<%= @flat.img_url %>); background-size: cover; background-position: center; width: 100%; height: 400px;"></div>
  <% end %>
   <div class="flat-container">
    <div class="content-left">
      <div class="content title">
        <h1><%= @flat.name %></h1>
        <h2><%= @flat.address %></h2>
      </div>
      <div class="content description">
        <%= @flat.description %>
      </div>
    </div>
    <div class="content-right">
      <div class="content booking">
        <h3>Book this place!</h3>
        <form method="get" action="?">
          From:<br>
          <input type="text" placeholder="18/07/2021"><br><br>
          To:<br>
          <input type="text" placeholder="22/07/2021"><br><br>
          <input type="submit" alt="Book">
        </form>
      </div>
      <div class="content details">
        <h3>Details</h3>
        <div class="card-details">
          <%= image_tag("users-solid.svg", size: 24) %>
          <%= @flat.number_of_guests %>
          &nbsp;
          <%= image_tag("euro-sign-solid.svg", size: 24) %>
          <%= @flat.price_per_night %>
        </div>
      </div>
      <div class="content share">
        <h4>Share</h4>
        <div>
          <%= image_tag("dove-solid.svg", size: 24) %>
          <%= image_tag("paw-solid.svg", size: 24) %>
          <%= image_tag("horse-solid.svg", size: 24) %>
          <%= image_tag("laptop-code-solid.svg", size: 24) %>
        </div>
      </div>
    </div>
  </div>
</div>
