<div class="nav">
  <h3><%= link_to "Simple Airbnb", flats_path %></h3>
  <h4><%= link_to "Add flat", new_flat_path, class: "btn-top" %></h4>
</div>

<div class="main-container">
  <h1>All our flats</h1>
  <p>All <%= @flats.length %> flats.</p>
  <div class="card-container">
    <% @flats.each do |flat| %>
      <% img = flat.id.to_s + ".jpg" if flat.id <= 30 %>
      <% img = flat.img_url %>
      <div class="flat-card">
        <% if flat.id <= 30 %>
          <% img = flat.id.to_s + ".jpg" %>
          <div style="margin: 0 auto; background: url(<%= asset_path img %>); background-size: cover; width: 100%; height: 230px;"></div>
        <% else %>
          <div style="margin: 0 auto; background: url(<%= flat.img_url %>); background-size: cover; width: 100%; height: 230px;"></div>
        <% end %>
        <div class="card-text">
          <h2><%= flat.name %></h2>
          <%= flat.address %>
          <br><br>
          <div class="card-details">
            <%= image_tag("users-solid.svg", size: 24) %>
            <%= flat.number_of_guests %>
            &nbsp;
            <%= image_tag("euro-sign-solid.svg", size: 24) %>
            <%= flat.price_per_night %>
          </div>
        </div>
        <div class="card-bottom">
          <h4>
            <%= link_to "More info", flat_path(flat.id) %>
            &nbsp;&nbsp;
            <%= link_to "Edit", edit_flat_path(flat.id) %>
            &nbsp;&nbsp;
            <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }  %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
